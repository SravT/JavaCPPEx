<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.virginia.cs.cs4720.umbreon" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.virginia.cs.cs4720.umbreon.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="edu.virginia.cs.cs4720.umbreon.PostActivity"
            android:label="@string/title_activity_post"
            android:parentActivityName="edu.virginia.cs.cs4720.umbreon.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.virginia.cs.cs4720.umbreon.MainActivity" />
        </activity>
        <activity
            android:name="edu.virginia.cs.cs4720.umbreon.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="edu.virginia.cs.cs4720.umbreon.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.virginia.cs.cs4720.umbreon.MainActivity" />
        </activity>
        <activity
            android:name="edu.virginia.cs.cs4720.umbreon.TemperatureActivity"
            android:parentActivityName="edu.virginia.cs.cs4720.umbreon.MainActivity"
            android:label="@string/title_activity_temperature" >
        </activity>
        <activity
            android:name="edu.virginia.cs.cs4720.umbreon.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.virginia.cs.cs4720.umbreon.AddLocationActivity"
            android:label="@string/title_activity_add_location"
            android:parentActivityName="edu.virginia.cs.cs4720.umbreon.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.virginia.cs.cs4720.umbreon.MainActivity" />
        </activity>
    </application>

</manifest>
